<Window x:Class="Practice_Exam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice_Exam"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <Label Grid.Column="1" Content="Formations" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <ComboBox Grid.Column="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" IsReadOnly="True">
            <ComboBoxItem Cursor="Hand" Content="4-4-2" IsSelected="True"/>
            <ComboBoxItem Cursor="Hand" Content="4-3-3"/>
            <ComboBoxItem Cursor="Hand" Content="4-5-1"/>
        </ComboBox>

        <Button x:Name="btnAddPlayer" Content="Add Player -->" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" Height="25" Margin="0,0,0,50"/>
        <Button x:Name="btnSubPlayer" Content="-- Remove Player" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="120" Height="25" Margin="0,50,0,0"/>


        <Label Grid.Column="1" Content="All Players" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="1"/>
        <Label Grid.Column="4" Content="Selected Players" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="1"/>
        <ListBox x:Name="bxAllPlayers" ItemsSource="{Binding AllPlayers}" Grid.Column="1" Grid.Row="2"/>
        <ListBox x:Name="bxSelectedPlayers" Grid.Column="4" Grid.Row="2"/>

        <Label Grid.Column="4" Content="Spaces Left" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3" Margin="0,0,40,0"/>
        <TextBlock x:Name="txblkSpaces" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="3" Margin="80,0,0,0" Width="30"></TextBlock>


    </Grid>
</Window>
